generator client {
  provider = "prisma-client-js"
  output = "./generated"
}

datasource db {
  provider  = "postgresql"
  url       = env("enrichminiondb_database_url")
  directUrl = env("enrichminiondb_direct_url")
}

model BreakPoint {
  LogID        String @unique
  ApiCode      Int
  Emails       String[]
  log          EmailVerificationLogs @relation(fields: [LogID], references: [LogID])
}

model EmailVerificationLogs {
  LogID      String  @id @unique
  userID     String
  fileName   String
  emails     Int
  creditsUsed Int
  status     String
  date       DateTime
  user       User    @relation(fields: [userID], references: [UserID])
  breakPoint BreakPoint?
}


model EnrichmentLogs{
  LogID String @id @unique
  userID String
  firstName String
  lastName String
  email String
  phoneNumber String
  currency String
  creditsUsed Int
  fileName String
  URL String?
  Date DateTime
  user User @relation(fields: [userID], references: [UserID])
}

model User {
    UserID String @id @unique
    name String
    email String
    companyName String?
    phoneNumber String?
    location String?
    currency String?
    credits Int
    apikey String?  @unique
    enrichmeantLogs EnrichmentLogs[]
    emailVerificationLogs EmailVerificationLogs[]
}

model Admin{
  email String @id @unique
  password String
}