generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider  = "postgresql"
  url       = env("enrichminiondb_database_url")
  directUrl = env("enrichminiondb_direct_url")
}

model Email {
  Provider   String
  email      String       @id
  status     String
  mxRecord   String
  mxProvider String
  BreakPoint BreakPoint @relation(fields: [BreakPointBreakPointID], references: [BreakPointID])
BreakPointBreakPointID String
}

model BreakPoint {
  BreakPointID String                @id @default(cuid())
  LogID        String                @unique
  ApiCode      Int
  Emails       Email[]
  log          EmailVerificationLogs @relation(fields: [LogID], references: [LogID])
}

model EmailVerificationLogs {
  LogID          String      @id @unique
  userID         String
  fileName       String
  emails         Int
  creditsUsed    Int
  status         String
  date           DateTime
  responseString String?
  InProgress     Boolean?
  ValidEmails    Int?
  url            String?
  catchAllEmails Int?
  InvalidEmails  Int?
  UnknownEmails  Int?
  user           User        @relation(fields: [userID], references: [UserID])
  breakPoint     BreakPoint?
}

model EnrichmentLogs {
  LogID        String   @id @unique
  userID       String
  Type         String
  creditsUsed  Int
  status       String
  fileName     String
  URL          String?
  UploadedFile String?
  Date         DateTime
  user         User     @relation(fields: [userID], references: [UserID])
}

model BillingDetails {
  BillingID   String   @id @unique
  userID      String
  Url         String
  ServiceName String
  date        DateTime
  user        User     @relation(fields: [userID], references: [UserID])
}

model User {
  UserID                String                  @id @unique
  name                  String
  email                 String
  companyName           String?
  phoneNumber           String?
  location              String?
  currency              String?
  credits               Int
  apikey                String?                 @unique
  enrichmeantLogs       EnrichmentLogs[]
  emailVerificationLogs EmailVerificationLogs[]
  billingDetails        BillingDetails[]
}

model Admin {
  email    String @id @unique
  password String
}
