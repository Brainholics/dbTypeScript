generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider  = "postgresql"
  url       = env("podcast_database_url")
  directUrl = env("podcast_direct_url")
}

model SavedProfiles {
  id                  String       @id @unique
  UserID              String 
  email               String?
  title               String?
  sentiment           String?
  authorName          String?
  rank                Int?
  audience            String?
  adCost              Int?
  host                String?
  category            String?
  language            String?
  episodes            Int?
  lastedPublished     DateTime?
  publishingFrequency String?
  user                User      @relation(fields: [UserID], references: [UserID])
  createdAt           DateTime  @default(now())
}

model User {
  UserID        String          @id @unique
  name          String
  email         String
  companyName   String?
  phoneNumber   String?
  location      String?
  credits       Int
  apikey        String?         @unique
  SavedProfiles SavedProfiles[]
}

model Admin {
  email    String @id @unique
  password String
}
